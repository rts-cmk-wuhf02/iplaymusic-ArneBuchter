<div class="swiper-container">
    <div class="swiper-wrapper">
      <div class="swiper-slide" style="background-image:url(/assets/images/placeholder.jpg)"></div>
      <div class="swiper-slide" style="background-image:url(/assets/images/placeholder.jpg)"></div>
